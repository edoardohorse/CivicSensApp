<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/button_load_photo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/button_load_photo"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:drawableLeft="@drawable/ic_file_upload_24dp"
        android:onClick="choosePhoto"/>

    <TextView
        android:id="@+id/button_take_photo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/button_take_photo"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:drawableLeft="@drawable/ic_photo_camera_24dp"
        android:onClick="takePhoto"/>


</LinearLayout>